generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  leads    Lead[]
  activities Activity[]
}

model Lead {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   // âœ… added email
  status   String   @default("new")
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
}


model Activity {
  id       Int      @id @default(autoincrement())
  note     String
  date     DateTime @default(now())
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
}
